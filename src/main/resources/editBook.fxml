<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.fis.sre.controllers.EditBookController">
   <children>
      <Label layoutX="14.0" layoutY="30.0" text="Please insert Book's title you want to edit:">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label layoutX="51.0" layoutY="113.0" text="Title:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="titleField" layoutX="150.0" layoutY="114.0" />
      <Button fx:id="cancelButton" layoutX="133.0" layoutY="289.0" mnemonicParsing="false" onAction="#cancelButtonOnAction" text="Cancel" />
      <Button fx:id="doneButton" layoutX="428.0" layoutY="289.0" mnemonicParsing="false" onAction="#handleEditingAction" text="Done" />
      <Label layoutX="51.0" layoutY="172.0" text="New Price:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="priceField" layoutX="150.0" layoutY="173.0" />
   </children>
</AnchorPane>
